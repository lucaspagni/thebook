<main id="Edit-Rushee">

	<section>

		<h1>Edit Rushee</h1>

		<%= image_tag @rushee.image.url(:medium) %>

		<%= form_for(@rushee) do |f| %>
			<% if @rushee.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(@rushee.errors.count, "error") %> prohibited this rushee from being saved:</h2>

					<ul>
						<% @rushee.errors.full_messages.each do |message| %>
							<li><%= message %></li>
						<% end %>
					</ul>
				</div>
			<% end %>

			<%= f.text_field :name, :placeholder => "Name" %>
			
			<%= f.text_field :age, :placeholder => "Age" %>

			<%= f.text_field :major, :placeholder => "Major" %>

			<%= f.text_field :hometown, :placeholder => "Hometown" %>

			<%= f.text_field :campus_involvement, :placeholder => "Campus involvement" %>
			
			<%= f.text_area :bio, :placeholder => "Relevant Information" %>

			<%= f.text_field :fb, :placeholder => "Link to Facebook profile" %>

			<%= f.label "Legacy?" %>
			<%= f.check_box :legacy %>
			
			<%= f.label "Change image" %>
			<%= f.file_field :image %>
			
			<%= f.submit %>
			
		<% end %>

	</section>

</main>
